<mvc:View controllerName="websitevisualizer.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    		<Label id="Product" labelFor="productInput" />
		<Input
			id="productInput"
			placeholder="Enter product"
			showSuggestion="true"
			showValueHelp="true"
			valueHelpRequest=".onValueHelpRequest"
			suggestionItems="{/ProductCollection}">
			<suggestionItems>
				<core:Item id="productItem" text="{Name}" />
			</suggestionItems>
		</Input>
				<Button 
						id="generateImageButton"
						text="Default"
						press="onPress"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					<layoutData>
						<FlexItemData id="flexItemData" growFactor="1" />
					</layoutData>
				</Button>
			<VBox id="imageContainer" class="sapUiSmallMarginTop">
				<Text id="detailsActiveImage" text="Active state image:" class="sapUiSmallMarginBottom" />
				<Image id="activeImage" ariaDetails="detailsActiveImage" src="{img>/products/pic3}"
					width="{/imageWidth}"
					decorative="false"
					press="handleImage3Press" />
			</VBox>
        <content />
    </Page>
</mvc:View>
